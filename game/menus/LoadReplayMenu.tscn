[sub_resource type="GDScript" id="GDScript_1jw8b"]
resource_name = "SelectTrackMenu"
script/source = "extends CanvasLayer

signal replay_toggled(replay_uri: String, toggled: bool)

var track_uri: String:
	set(value):
		track_uri = value
		_load_track_replays()

func _load_track_replays() -> void:
	if track_uri.is_empty():
		return

	var replay_dir := \"user://replays/%d\" % track_uri.hash()
	var replays := DirAccess.get_files_at(replay_dir)
	for replay in replays:
		var replay_uri := \"%s/%s\" % [replay_dir, replay]
		var button := CheckButton.new()
		button.text = replay.get_file().get_basename()
		button.toggled.connect(func(toggled: bool): replay_toggled.emit(replay_uri, toggled))
		%ReplayButtonContainer.add_child(button)
"

