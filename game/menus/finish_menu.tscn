[sub_resource type="GDScript" id="GDScript_b2xvw"]
resource_name = "FinishMenu"
script/source = "extends CanvasLayer

signal restart
signal save_replay
signal main_menu
signal quit


func _on_restart_pressed() -> void:
	restart.emit()


func _on_save_replay_pressed() -> void:
	save_replay.emit()


func _on_main_menu_pressed() -> void:
	main_menu.emit()


func _on_quit_pressed() -> void:
	quit.emit()


func set_time(time: String) -> void:
	%FinishTime.text = time


func set_track_id(track_id: String) -> void:
	var pb := Replays.get_personal_best(track_id)
	if pb:
		%PersonalBestTime.text = Replays.human_time(pb.get_count() - 300)
	else:
		%PersonalBestTime.text = \"\"


func set_achievements(achievements: Array[String]) -> void:
	%AchievementLabel.visible = achievements.size() > 0
	var text := \"\\n\".join(PackedStringArray(achievements))
	%AchievementLabel.text = \"[center][i]%s[/i][/center]\" % text


func set_replay_label(text: String) -> void:
	%SaveReplayLabel.text = text
	%SaveReplayLabel.visible = text != \"\"
	%SaveReplay.visible = text == \"\"
"

